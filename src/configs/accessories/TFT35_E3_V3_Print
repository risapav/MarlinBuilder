opt_enable \
    SDSUPPORT \
    BABYSTEPPING \
    AUTO_REPORT_POSITION \
    M115_GEOMETRY_REPORT \
    M114_DETAIL \
    REPORT_FAN_CHANGE \
    AUTO_REPORT_SD_STATUS \
    EMERGENCY_PARSER \
    HOST_ACTION_COMMANDS \
    HOST_PROMPT_SUPPORT \
    FILAMENT_LOAD_UNLOAD_GCODES \
    REPRAP_DISCOUNT_FULL_GRAPHIC_SMART_CONTROLLER

opt_set SDCARD_CONNECTION LCD
opt_set SERIAL_FLOAT_PRECISION 4
opt_set LCD_TIMEOUT_TO_STATUS "300000"

echo "- Configured for TFT35 E3 V3" >> README.md
